void loop() 
{

  FadeInOut(0xff, 0x00, 0x00); // red
  FadeInOut(0xff, 0xff, 0xff); // white 
  FadeInOut(0x00, 0x00, 0xff); // blue

  // Slower:
   Strobe(0xff, 0x77, 0x00, 10, 100, 1000);
  // Fast:
  //Strobe(0xff, 0xff, 0xff, 10, 50, 1000);

